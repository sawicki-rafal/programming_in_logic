arc(a,b).
arc(b,a).
arc(b,c).
arc(c,d).


reachable(X,Y):- reachable2(X,Y,[]).

reachable2(X,X,VISITED):-
        (\+ member(X,VISITED)).

reachable2(X,Y,VISITED):-
    (   \+ member(X,VISITED)),
    arc(X,Y).


reachable2(X,Y,VISITED):-
   (\+ member(X,VISITED)),
   arc(X,Z),
    reachable2(Z,Y,[X|VISITED]).
